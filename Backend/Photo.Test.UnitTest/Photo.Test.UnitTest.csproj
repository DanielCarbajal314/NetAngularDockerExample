      <DependentUpon>ImageTestResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="BusinessLogic\ImageTestResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
